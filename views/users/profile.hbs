<div class="container card flex-row" style="width: auto;">
  <img class="card-img-top " src="{{user.image}}" alt="avatar" style="width:250px; height:250px; border-radius:50%;">
  <div class="card-body mt-4">
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>
    <p><strong>{{ commentCount }}</strong> 間已評論餐廳</p>
    <p><strong>{{ favoritedCount }}</strong> 間收藏的餐廳</p>
    <p><strong>{{ followingCount }}</strong> Followings (追蹤者)</p>
    <p><strong>{{ followerCount }}</strong> Followers (追隨者)</p>
    <a class="btn btn-outline-secondary" href="/users/{{user.id}}/edit">Edit</a>
  </div>
</div>


<div class="row mt-2">
    <div class="follower-group col-md-3">
      <div class="card mt-2">
        <div class="card-header">
          <p><b>{{ followingCount }}</b> followings(追蹤者)</p>
        </div>
        <div class="card-body">
        {{#each user.Followings }}
        <a href="/users/{{this.id}}">
          <div class="card-image mt-1" style="display:inline-block;">
            <img src="{{this.image}}" alt="restaurant" style="width:80px; height:80px;">
          </div>
        </a>
      {{/each}}
        </div>
      </div>

      <div class="card mt-2">
        <div class="card-header">
          <p><b>{{ followerCount }}</b> followers(追隨者)</p>
        </div>
        <div class="card-body">
        {{#each user.Followers }}
        <a href="/restaurants/{{this.id}}">
          <div class="card-image mt-1" style="display:inline-block;">
            <img src="{{this.image}}" alt="restaurant" style="width:80px; height:80px;">
          </div>
        </a>
      {{/each}}
        </div>
      </div>
    </div>

  <div class="commented-restaurants-group col-md-9">
      <div class="card mt-2">
        <div class="card-header">
          <p><b>{{ commentCount }}</b> 間已評論餐廳</p>
        </div>
        <div class="card-body">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}">
          <div class="card-image mt-1" style="display:inline-block;">
            <img src="{{this.Restaurant.image}}" alt="restaurant" style="width:80px; height:80px;">
          </div>
        </a>
      {{/each}}
        </div>
      </div>

      <div class="card mt-2">
        <div class="card-header">
          <p><b>{{ favoritedCount }}</b> 間收藏的餐廳</p>
        </div>
        <div class="card-body">
        {{#each user.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}">
          <div class="card-image mt-1" style="display:inline-block;">
            <img src="{{this.image}}" alt="restaurant" style="width:80px; height:80px;">
          </div>
        </a>
        {{/each}}
        </div>
      </div>
    </div>  
</div>

